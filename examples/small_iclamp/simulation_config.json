{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/inputs",
    "$COMPONENTS_DIR": "$BASE_DIR/../shared_components"
  },

  "run": {
    "tstop": 1000.0,
    "dt": 0.1,
    "spike_threshold": -15,
    "nsteps_block": 10000
  },

  "target_simulator":"NEST",

  "conditions": {
    "celsius": 34.0,
    "v_init": -80
  },

  "node_sets_file": "node_sets.json",

  "inputs": {
 	"current_clamp_1": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "no_point_cells",
      "amp": 0.1500,
      "delay": 100.0,
      "duration": 800.0
    }
  },

  "output":{ 
    "output_dir": "$OUTPUT_DIR",
    "log_file": "log.txt",
    "spikes_file": "spikes.h5",
    "spikes_sort_order": "time"
  },

  "reports": {

    "membrane_potential": {
      "cells": "all_point_cells",
      "variable_name": "V_m",
      "module": "multimeter_report",
      "sections": "soma",
   "enabled": true
    }

  }
}
