{
  "manifest": {
    "$OUTPUT_DIR": "./output",
    "$INPUT_DIR": "./inputs",
    "$COMPONENT_DIR": "../shared_components"
  },

  "run": {
    "tstop": 3000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15,
    "nsteps_block": 5000,
    "overwrite_output_dir": true
  },

  "target_simulator":"NEURON",

  "conditions": {
    "celsius": 34.0,
    "v_init": -80
  },

  "inputs": {
    "LGN_spikes": {
      "input_type": "spikes",
      "module": "h5",
      "input_file": "$INPUT_DIR/lgn_spikes.h5",
      "node_set": "lgn"
    },

    "TW_spikes": {
      "input_type": "spikes",
      "module": "h5",
      "input_file": "$INPUT_DIR/tw_spikes.h5",
      "node_set": "tw"
    }
  },

  "output":{
    "log_file": "$OUTPUT_DIR/log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "$OUTPUT_DIR/spikes.h5",
    "spikes_sort_order": "time"
  }
}